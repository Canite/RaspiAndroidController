<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:text="MP3 Player"
        android:id="@+id/mp3Button"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:text="Security"
        android:id="@+id/securityButton"
        android:layout_below="@id/mp3Button"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:text="Arduino Shit"
        android:id="@+id/arduinoButton"
        android:layout_below="@id/securityButton"/>


    <Button
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:text="Dunno Yet"
        android:id="@+id/tempButton"
        android:layout_below="@id/arduinoButton"/>

</RelativeLayout>